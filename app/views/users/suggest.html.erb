<h1>Suggested Musicians</h1>
<% if @musicians.length > 0 %>
  <div class = "index">
    <% @musicians.each do |musician| %>
      <div class = "index-item">
        <a href="<%= musician_path(musician)%>">
          <div class = "index-item-title">
            <strong><%= musician.name %></strong></div>
          <div class = "index-item-content">
            <img src="<%=musician.image_url%>" alt="Photo Not Available" class = "index-image">
            <em><%= musician.location %></em><br>
            <em><%= musician.print_instruments %></em>
          </div>
        </a>
      </div>
    <% end %>
  </div>
<% else %>
  <h4 class = "item">There are no suggested musicians in your area</h4>
<% end %>
<br>
<h1>Suggested Openings</h1>
<% if @openings.length > 0 %>
  <div class = "index"><% @openings.each do |opening| %>
      <div class = "index-item">
        <a href="<%=opening_path(opening)%>">
          <strong><%= opening.name %></strong><br>
          <em><%= opening.band.location %></em>
        </a>
      <% end %>
    </div>
  <% else %>
    <h4>There are no suggested openings in your area</h4>
  <% end %>
