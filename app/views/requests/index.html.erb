<% if !!flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: green;" ><%= e %></p>
  <% end %>
<% end %>
<% if !!(@requests["musicians"]&& @requests["musicians"].length > 0) %>
  <div class = "index" >
    <% @requests["musicians"].each do |request| %>
      <div class = "index-item"><%= link_to request.opening.name, opening_path(request.opening_id) %>
        <p><%= request.message %></p>
        <%= form_tag request_path(request), method: :delete do %>
          <%= submit_tag "Remove This Request" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
<% if !!(@requests["openings"] && @requests["openings"].length > 0) %>
  <div class = "index">
    <% @requests["openings"].each do |request| %>
      <div class = "index-item"><%= link_to "#{request.musician.name} (#{request.opening.name})", musician_path(request.musician_id) %>
        <p><%= request.message %></p>
        <%= form_tag request_path(request), method: :delete do %>
          <%= submit_tag "Remove This Request" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
