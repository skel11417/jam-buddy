<%= form_for @musician do |f| %>
  <%= f.text_field :name, placeholder: "Your Name"%><br>
  <%= f.text_field :image_url %><br>
  <%= f.text_field :location, placeholder: "Location" %><br>
  <%= f.text_area :bio, placeholder: "Bio" %><br>
  <%= f.label :availabiity, "What's your availability?" %><br>
  <%= f.collection_check_boxes :availabiity, ["single gigs", "jams", "full-time band", "part-time band", "session_work"], :to_s, :to_s %><br>
  <div class="genres">
    <%= f.label :genres, "Your genres" %><br>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
  </div>

  <div class="instruments">
    <%= f.label :instruments, "Your instruments" %><br>
    <%= f.collection_check_boxes :instrument_ids, Instrument.all, :id, :name %>
  </div>

  <%= f.submit %>
<% end %>
